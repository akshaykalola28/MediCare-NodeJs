<!DOCTYPE html>
<html>

<head>
    <title>Sign Up</title>
    <link rel='stylesheet' href='/stylesheets/signup.css' />
    <!-- Material Design Lite -->
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <!-- Material Design icon font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script>
        function validateForm() {
            var firstName = document.forms["signup"]["firstName"].value;
            var lastName = document.forms["signup"]["lastName"].value;
            var displayName = document.forms["signup"]["displayName"].value;
            var email = document.forms["signup"]["email"].value;
            var phoneNumber = document.forms["signup"]["phoneNumber"].value;
            var password = document.forms["signup"]["password"].value;
            var cnfpassword = document.forms["signup"]["cnfpassword"].value;
            var user_type = document.forms["signup"]["user_type"].value;

            if (isNaN(phoneNumber) || phoneNumber.length > 10 || phoneNumber.length < 10) {
                alert("Enter your Phone Number with exactly 10 digits.");
                return false;
            } else if (password != cnfpassword) {
                alert("Your password and confirm password does not match.");
                return false;
            } else if (user_type == "none") {
                alert("Please, select valid user type except none.");
                return false;
            } else {
                /*var data = {
                    "firstName": firstName,
                    "lastName": lastName,
