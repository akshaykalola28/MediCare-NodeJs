                    "displayName": displayName,
                    "user_type": user_type,
                    "profileUrl": null
                };
                var jsonData = JSON.stringify(data);
                alert(jsonData);*/
                return true;
            }
        }
    </script>
</head>

<body style="background-color: cornflowerblue;">
    <ul>
        <li><a href="">MEDICARE</a></li>
        <li style="float: right;"><a href="login">LogIn</a></li>
        <li style="float: right;"><a href="signup">SignUp</a></li>
        <li style="float: right;"><a href="index">Home</a></li>
    </ul>

    <form class="center" method="POST" name="signup" onsubmit="return validateForm();" action="user/register">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" inputmode="text" id="firstName" required>
            <label class="mdl-textfield__label" for="firstName">First Name</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" inputmode="text" id="lastName" required>
            <label class="mdl-textfield__label" for="lastName">Last Name</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" inputmode="text" id="displayName" required>
            <label class="mdl-textfield__label" for="displayName">Nick Name</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" inputmode="email" id="email" required>
            <label class="mdl-textfield__label" for="email">Email</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" inputmode="text" id="phoneNumber" required>
            <label class="mdl-textfield__label" for="phoneNumber">Mobile No.</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="password" maxlength="6" id="password" required>
            <label class="mdl-textfield__label" for="password">Password</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="password" id="cnfpassword" required>
            <label class="mdl-textfield__label" for="cnfpassword">Confirm Password</label>
        </div><br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="user_type" value="hospital" readonly>
            <label class="mdl-textfield__label" for="user_type">User Type</label>
        </div><br>
        <button class="mdl-button mdl-button__ripple">
            <input class="mdl-button__label" type="submit" id="submit">
        </button>
    </form>

</body>

</html>